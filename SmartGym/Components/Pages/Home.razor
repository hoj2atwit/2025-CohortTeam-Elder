@page "/home"

<PageTitle>Smart Gym</PageTitle>
<style>
	main {
		margin: 0;
	}
	.home-bar {
		background:transparent;
	}

	.logo {
		filter: invert(50%) sepia(39%) saturate(2%) hue-rotate(214deg) brightness(118%) contrast(134%) ;
		max-height: 10vh;
	}

	h1{
	  font-size:10em;
	 font-family: "Funnel Display", sans-serif;
	}

	h2{
		font-family: "Funnel Display", sans-serif;
		font-weight: bold;
		font-size: 2.5em;
	}

	#outer {
		text-align: center;
		position: relative;
		overflow: hidden;
		min-height: 100vh;
	}

	#home-top-video:before {
		content: "";
		position: absolute;
		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
		background: linear-gradient(to right,hsla(257, 69%, 5%, 0.5), #170937);
	}

	#home-top-video {
		left: 0%;
		top: 0%;
		height: 100vh;
		width: 100%;
		overflow: hidden;
		position: absolute;
	}

	#home-text {
		position: absolute;
		left: 50%;
		top: 50%;
		-webkit-transform: translate(-50%, -50%);
		transform: translate(-50%, -50%);
		color: #fff;
		z-index: 1;
	}
	.btn-join{
		height: 15vh;
		width: 40vh;
		font-size: 2.5em;
	}
	ul{
		list-style-image: url('data:image/svg+xml;base64,');
	}
	.bg-img{
		background: linear-gradient(129deg, hsla(257, 69%, 5%, 0.5), #170937);
		background-size: 50% 50%;
		background-repeat: no-repeat;
		background-position: bottom;
		background-attachment: scroll;
	}
</style>

<section id="outer" aria-labelledby="smart">
	<div id="home-top-video">
		<video autoplay loop muted class="w-full">
			<source src="./lib/videos/home.mp4" type="video/mp4" /> Your browser does not support the video tag. We suggest you upgrade your browser.
		</video>
		<div id="home-text">
			<h1 class="p5" id="smart">Smart Gym</h1>
			Home of the Gains
		</div>
	</div>
	<div class="absolute  inset-x-0 bottom-0 z-1">
		<button class="p-5 mx-5 bg-accent text-xl hover:bg-violet-600 focus:outline-2 btn-join">Join Today!</button>
	</div>
</section>
<section class="text-center text-[#170937] bg-white p-5" aria-labelledby="why">
	<h2 id="why" class="text-3xl mb-3">Why Choose Us?</h2>
	<div class="grid grid-cols-3 gap-4 px-5">
		<article class="border-1 border-[#3d2ddd] rounded-lg p-4">
			<h3>Respect</h3>
			We are nurturers: we seek only to encourage, entertain, and empower.
		</article>
		<article class="border-1 border-[#3d2ddd] rounded-lg p-4">
			<h3>Community</h3>
			Here we keep open minds
		</article>
		<article class="border-1 border-[#3d2ddd] rounded-lg p-4">
			<h3>Fun</h3>
			We know serious fitness is hard, but that doesn’t mean it can’t be fun
		</article>
	</div>
	
</section>
<section class="hero text-white text-3xl flex">
	<article class="p-6 m-5 bg-primary-500 flex-row">
		<h2 class="mb-3">Strength, Endurance, Transformation</h2>
		Join over 500+ members to achieve your fitness goals with expert guidance and state-of-the-art facilities.
		<img src="/lib//images/home/ath1.png" class="bg-img"/>
	</article>
	<article class="p-6 m-5 bg-primary-900">
		<h2 class="mb-3">Become a Member Today!</h2>
		Enjoy many perks of being part of our family.
		<ul class="list-image-[url(/lib/images/checkmark.png)]">
			<li>24/7 Access</li>
			<li>Modern equipment</li>
			<li>Friendly staff</li>
		</ul>
	</article>
	<article class="p-6 m-5 bg-secondary">
		<h2 class="mb-3">Summer sale!</h2>
		Become a member for only $0.99
	</article>
	
</section>