@using SmartGym.Models
@inject NavigationManager navigationManager
<div class="w-[170px] min-w-[150px] h-[40vh] flex-shrink-0 rounded-md border border-gray-200 bg-white shadow-sm dark:border-gray-700 dark:bg-gray-800 m-2 p-2 cursor-pointer hover:shadow-lg transition-shadow duration-200" @onclick=bookClass>
	<img class="h-1/3 w-full rounded-md object-cover mb-2" src="/img/placeholder.png" alt="" />
	<div class="px-1 py-0">
		<h5 class="mb-1 text-base font-bold tracking-tight text-gray-900 dark:text-white">@currClass.Name</h5>
		<p class="mb-1 text-xs text-gray-700 dark:text-gray-400">Max Capacity: @currClass.MaxCapacity</p>
		<p class="mb-0 text-xs text-gray-700 dark:text-gray-400 truncate">@currClass.Description</p>
	</div>
</div>

@code {
    [Parameter]
    public ClassDTO currClass { get; set; }

    private async Task bookClass()
    {
		navigationManager.NavigateTo($"/ClassSessions/{currClass.Id}");
    }
}
