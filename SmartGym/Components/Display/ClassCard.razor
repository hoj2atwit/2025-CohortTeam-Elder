@using SmartGym.Models
@inject NavigationManager navigationManager
<div class="w-[200px] min-w-[180px] flex-shrink-0 rounded-lg border border-gray-200 bg-white shadow-sm dark:border-gray-700 dark:bg-gray-800" @onclick=bookClass>
    <a href="#">
        <img class="h-32 w-full rounded-t-lg object-cover" src="/img/placeholder.png" alt="" />
    </a>
    <div class="p-3">
        <a href="#">
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">@currClass.Name</h5>
        </a>
        <p class="mb-3 text-sm text-gray-700 dark:text-gray-400">Max Capacity: @currClass.Capacity</p>
    </div>
</div>

@code {
    [Parameter]
    public ClassDTO currClass { get; set; }

    private async Task bookClass()
    {
        navigationManager.NavigateTo($"/Bookings/{currClass.Id}");
    }
}
